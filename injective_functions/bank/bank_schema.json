{
    "functions": [
        {
            "name": "query_balances",
            "description": "Query the balance of an Injective address. If no address is provided, uses the current agent's address.",
            "parameters": {
              "type": "object",
              "properties": {
                "denoms": {
                  "type": "array",
                  "items" :{
                      "type": "string"
                  },
                  "description": "Token denomination to query (e.g., 'INJ', 'USDT')",
                  "default": "INJ"
                }
              },
              "required": []
            }
          },
      {
        "name": "transfer_funds",
        "description": "Transfer funds from one Injective Address to another Injective address",
        "parameters": {
          "type": "object",
          "properties": {
            "to_address": {
              "type": "string",
              "description": "Recipient's Injective address"
            },
            "amount": {
              "type": "number",
              "description": "Amount to transfer"
            },
            "denom": {
              "type": "string",
              "description": "Token denomination",
              "default": "INJ"
            }
          },
          "required": ["to_address", "amount"]
        }
      }
    ]
  }